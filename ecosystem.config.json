{
	"apps": [
		{
			"name": "elite-hiring-task",
			"script": "./dist/server.js",
			"instances": "max",
			"exec_mode": "cluster",
			"watch": false,
			"max_memory_restart": "1G",
			"error_file": "./logs/error.log",
			"out_file": "./logs/access.log",
			"time": true,
			"env": {
				"NODE_ENV": "development",
				"PORT": 4000
			},
			"env_production": {
				"NODE_ENV": "production",
				"PORT": 80
			},
			"exp_backoff_restart_delay": 100,
			"max_restarts": 10,
			"restart_delay": 4000,
			"autorestart": true
		}
	]
}
